<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_marginTop="48dp"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:text="" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="48dp"
        android:layout_toRightOf="@id/textview"
        android:text="" />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="48dp"
        android:layout_toRightOf="@id/textview"
        android:text="" />

    <TextView
        android:id="@+id/textviewSum"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="48dp"
        android:layout_toRightOf="@id/textview2"
        android:text="" />

    <Button
        android:id="@+id/num1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/textview"
        android:text="1" />
    <Button
        android:id="@+id/num2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/textview"
        android:layout_toRightOf="@id/num1"
        android:text="2" />
    <Button
        android:id="@+id/num3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/textview"
        android:layout_toRightOf="@id/num2"
        android:text="3" />
    <Button
        android:id="@+id/num4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/num1"
        android:text="4" />
    <Button
        android:id="@+id/num5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/num2"
        android:layout_toRightOf="@id/num4"
        android:text="5" />
    <Button
        android:id="@+id/num6"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/num3"
        android:layout_toRightOf="@id/num5"
        android:text="6" />
    <Button
        android:id="@+id/num7"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/num5"
        android:text="7" />
    <Button
        android:id="@+id/num8"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/num5"
        android:layout_toRightOf="@id/num7"
        android:text="8" />
    <Button
        android:id="@+id/num9"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/num6"
        android:layout_toRightOf="@id/num8"
        android:text="9" />
    <Button
        android:id="@+id/num0"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/num7"
        android:text="0" />
    <Button
        android:id="@+id/ravno"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/num8"
        android:layout_toRightOf="@id/num0"
        android:text="=" />
    <Button
        android:id="@+id/plus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/num9"
        android:layout_toRightOf="@id/ravno"
        android:text="+" />
    <Button
        android:id="@+id/minus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/del"
        android:layout_toRightOf="@id/plus"
        android:text="-" />
    <Button
        android:id="@+id/umn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/textview2"
        android:layout_toRightOf="@id/num3"
        android:text="*" />
    <Button
        android:id="@+id/del"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/umn"
        android:layout_toRightOf="@id/num6"
        android:text="/" />
    <Button
        android:id="@+id/clear"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/minus"
        android:layout_toRightOf="@id/plus"
        android:text="C" />

</RelativeLayout>
